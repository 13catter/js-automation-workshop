{
  "compilerOptions": {
    "lib": [
      "dom",
      "es7",
    ],
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "src/",
    "types": ["webdriverio", "mocha", "node", "chai"]
  },
  "include": [
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}